@model GameHub.ViewModels.PlayersViewModel
@{  
    Layout = "~/Views/Shared/_Layout.cshtml";

}  

<div >
    <a href="#!/playercreate" class="btn">Create</a>
</div>

<div ng-controller="PlayerDeleteController" class = "table-responsive" >
        <div ng-show="error" class="alert alert-danger alert-dismissible" role="alert">{{error}}</div>
        <table   class = "table table-striped table-bordered" >
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Age</th>
                <th>Team</th>
                <th>Edit</th>
                <th>Delete</th>
                @*<th>DeleteApi</th>*@

            </tr>

            <tr ng-repeat = "player in Players">
                <td>{{player.FirstName}}</td>
                <td>{{player.LastName}}</td>
                <td>{{player.Age}}</td>
                <td>{{player.TeamName}}</td>
                <td>
                    <a href = "#!/playeredit/{{player.Id}}" class = "glyphicon glyphicon-edit" ></a>
                </td>
                <td>
                    <a href = "#!/playerdelete/{{player.Id}}" class = "glyphicon glyphicon-trash" ></a>
                </td>
                @*<td><button type="submit" class="btn btn-primary" ng-click="deletePlayer()">Delete</button></td>*@
            </tr>
        </table>
    </div>

