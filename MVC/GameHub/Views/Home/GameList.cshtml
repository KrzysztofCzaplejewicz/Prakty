@model GameHub.ViewModels.GamesViewModel
@{  
    Layout = "~/Views/Shared/_Layout.cshtml";

}  

<div >
    <a href="#!/gamecreate" class="btn">Create</a>
</div>
<div class = "table-responsive" >
    <div ng-show="error" class="alert alert-danger alert-dismissible" role="alert">{{error}}</div>
    <table   class = "table table-striped table-bordered" >
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Host</th>
            <th>Visitor</th>
            <th>Town</th>
            <th>League</th>
            <th>Score</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Details</th>
        </tr>

        <tr ng-repeat = "game in Games" >
            <td>{{game.Date}}</td>
            <td>{{game.Time}}</td>
            <td>{{game.Teams.TeamName}}</td>
            <td>{{game.Teams1.TeamName}}</td>
            <td>{{game.Teams.Town}}</td>
            <td>{{game.Leagues.LeagueName}}</td>
            <td>{{game.ScoreHost}}:{{game.ScoreVisitor}}</td>
            <td>
                <a href = "#!/gameedit/{{game.Id}}" class = "glyphicon glyphicon-edit" ></a>
            </td>
            <td>
                <a href = "#!/gamedelete/{{game.Id}}" class = "glyphicon glyphicon-trash" ></a>
            </td>
            
            <td>
                <a href="#!/gamedetails/{{game.Id}}" class="glyphicon glyphicon-eye-open"></a>
            </td>
        </tr>
    </table>
</div>


