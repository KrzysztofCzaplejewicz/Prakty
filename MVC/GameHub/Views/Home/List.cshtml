@model GameHub.ViewModels.TeamsViewModel
@{  
    Layout = "~/Views/Shared/_Layout.cshtml";

}  
<div >
    
    <a href="#!/create" class="btn btn-default">Create</a>
    

</div>

<div class = "table-responsive" >
        <div ng-show="error" class="alert alert-danger alert-dismissible" role="alert">{{error}}</div>
    <table   class = "table table-striped table-bordered" >
        <tr>
            <th>Logo</th>
            <th>TeamName</th>
            <th>Town</th>
            <th>League</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        <tr ng-repeat = "item in Teamss" >
            <td style="width: 96px"><img ng-src="{{item.UrlIcon}}" alt="" width="76" height="50"/></td>
            <td>{{item.TeamName}}</td>
            <td>{{item.Town}}</td>
            <td >
                {{item.Leagues.LeagueName}}
            </td>
            <td>
                <a href = "#!/edit/{{item.Id}}" class = "glyphicon glyphicon-edit" ></a>
            </td>
            <td>
                <a href = "#!/delete/{{item.Id}}" class = "glyphicon glyphicon-trash" ></a>
            </td>
        </tr>
    </table>
    
</div>

