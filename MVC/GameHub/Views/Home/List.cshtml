@model GameHub.ViewModels.TeamsViewModel
<div >
    <a href="#!/create" class="btn">Create</a>
</div>

<div>
    <a href="#!/gamelist" class="btn">Gamelist</a>
</div>

<div>
    <a href="#!/playerlist" class="btn">PlayersList</a>
</div>
<div class = "table-responsive" >
        <div ng-show="error" class="alert alert-danger alert-dismissible" role="alert">{{error}}</div>
        <table   class = "table table-striped table-bordered" >
            <tr>
                <th>TeamName</th>
                <th>Town</th>
                <th>League</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>

            <tr ng-repeat = "item in Teamss" >
                <td>{{item.TeamName}}</td>
                <td>{{item.Town}}</td>
                <td >
                    {{item.LeagueName}}
                </td>
                <td>
                    <a href = "#!/edit/{{item.Id}}" class = "glyphicon glyphicon-edit" ></a>
                </td>
                <td>
                    <a href = "#!/delete/{{item.Id}}" class = "glyphicon glyphicon-trash" ></a>
                </td>
            </tr>
        </table>
    </div>

