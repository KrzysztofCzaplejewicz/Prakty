<div class="container" ng-controller="mainCtrl as vm">
    <form ng-hide="vm.isLoggedin" class="navbar-form navbar-left">
        <div class="form-group">
            <input type="text"
                   class="form-control"
                   placeholder="username (email)"
                   ng-model="vm.userData.email">
        </div>
        <div class="form-group">
            <input type="password"
                   class="form-control"
                   placeholder="password"
                   ng-model="vm.userData.password">
        </div>
        <button type="submit"
                class="btn btn-default"
                ng-click="vm.login()">
            Login
        </button>
        <button type="submit"
                class="btn btn-default"
                ng-click="vm.registerUser()">
            Register
        </button>
        
       
        
    
        <div ng-show="vm.message">{{vm.message}}</div>
        
    </form>
    <h3 ng-if="vm.isLoggedin">
        <span>Witaj {{vm.userData.userName}}</span>
        <input type="button" class="btn" value="logoff" ng-click="vm.logOut()" />
    </h3>
   


    <div class = "container" >
            <div ng-if = "vm.isLoggedin"
                 ng-include="'home/index'"></div>
        </div>
</div>
